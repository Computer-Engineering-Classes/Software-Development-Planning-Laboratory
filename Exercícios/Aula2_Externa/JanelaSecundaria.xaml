<Window x:Class="Aula_Numero_2.JanelaSecundaria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_Numero_2"
        mc:Ignorable="d"
        Title="Janela Secundária" Height="140" Width="400" FontSize="14px">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Altere o texto" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" FontWeight="Bold" Margin="15,0,15,0"/>
        <TextBox x:Name="TBDescricao" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="15,0,15,0"/>

        <WrapPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="BTAlterar" Content="Alterar" Width="60" Margin="0,0,5,0" Click="BTAlterar_Click"/>
        <Button x:Name="BTCancelar" Content="Calcelar" Width="60" Margin="5,0,0,0" Click="BTCancelar_Click"/>
        </WrapPanel>
    </Grid>
</Window>
